@model UserView

@{
    UserView user;
    if (Model is not null)
        user = Model;
    else
    {
        user = new UserView
                {
                    Id = 1,
                    Username = "undefined",
                    Email = "undefined",
                    Phone = "undefined",
                    Avatar = "../Images/Users/default.png"
                };
    }
}

